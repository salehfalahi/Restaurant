@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}

<div class="row" style="margin-top:2rem;">
    <div class="col-md-4 bg-white mx-auto rounded border p-3">
        <section>
            <h2 class="text-center mb-3">ورود به حساب کاربری</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <form id="account" method="post">

                <div class="mb-3">
                    <input asp-for="Input.Email" class="form-control" />
                    <label class="form-label">ایمیل</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Input.Password" class="form-control" />
                    <label class="form-label">رمز عبور</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div class="row mb-3">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">ورود</button>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <a role="button" class="btn btn-outline-primary" href="/">خروج</a>
                    </div>
                </div>
                <div>
                    <p>
                        <a class="btn-link" id="forgot-password" asp-page="./ForgotPassword">رمز عبور را فراموش کرده اید؟</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ثبت نام </a>
                    </p>

                </div>
            </form>
        </section>
    </div>

</div>